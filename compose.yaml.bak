version: '3.9'

services:
  backend:
    build:
      context: .
      dockerfile: backend/Dockerfile
    container_name: cryptomonitor-backend
    ports:
      - "8000:8000"
    env_file:
      - backend/.env
    restart: unless-stopped

  frontend:
    build:
      context: .
      dockerfile: frontend/Dockerfile
    container_name: cryptomonitor-frontend
    ports:
      - "3000:80"
    restart: unless-stopped
    depends_on:
      - backend